@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">@Localizer["Associate your"] @Model.ProviderDisplayName @Localizer["account"].</h4>
<hr />

<p id="external-login-description" class="text-info">
    @Localizer["You've successfully authenticated with"] <strong>@Model.ProviderDisplayName</strong>.
    @Localizer["Please enter an email address for this site below and click the Register button to finish logging in."]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName">@Localizer["First name"]</label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName">@Localizer["Last name"]</label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber">@Localizer["Phone number"]</label>
                <input id="ContactPhone" asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">@Localizer["Email"]</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script>
        $(function () {

            $("#ContactPhone").mask("(999) 999-9999");
        });

    </script>
}
