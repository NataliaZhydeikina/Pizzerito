@page
@model Pizzerito.Pages.Admin.Category.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary font-weight-light">@Localizer["Category List"]</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="far fa-plus-square"> &nbsp; @Localizer["Create New"]</i></a>
        </div>
    </div>
    <br />
    <table id="DT-load" class="table table-striped table-bordered text-capitalize" style="width:100%">
        <thead>
            <tr>
                <th>@Localizer["Category Name"]</th>
                <th>@Localizer["Display Order"]</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/category.js"></script>
}
